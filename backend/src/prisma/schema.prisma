datasource db {
	provider = "postgresql"
	url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
	id				String @id @default(uuid())
	intra_id		Int	@unique
	firstName		String
	lastName		String
	nickname		String @unique
	email			String
	wallet			Int
	points			Int
	password		String
	profilePic		String
	coverPic		String
	level			Float
	grade			String
	
	userFriends     User[]  @relation("friends")
    friendOfUser    User[]  @relation("friends")

	matches			Match[]
}

model Match {
	id			String @id @default(uuid())
	players		User[]
	scores		Int[]
	playerAt	DateTime @default(now())
}

model FriendRequest {
	id			String @id @default(uuid())
	
}

